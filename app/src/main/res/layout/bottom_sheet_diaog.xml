<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idRLBSheet"
    android:background="@color/blue_shade_1">

    <TextView
        android:id="@+id/idTVPlaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Place Name"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/idIVFeedback"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/idTVPlaceName"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/idTVCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVPlaceName"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVFeedback"
        android:padding="3dp"
        android:text="Customer Name"
        android:textSize="24sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/idTVFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVCustomerName"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVFeedback"
        android:padding="3dp"
        android:text="Feedback"
        android:textSize="16sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/idTVRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVFeedback"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVFeedback"
        android:padding="3dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Rating"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/idTVRating">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Edit Feedback"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/idBtnEdit"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="View Feedback"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/idBtnViewFeedback"/>


    </LinearLayout>

</RelativeLayout>